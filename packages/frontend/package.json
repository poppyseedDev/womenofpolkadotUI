{
  "name": "@inkathon/frontend",
  "version": "0.0.1",
  "homepage": "https://inkathon.xyz",
  "scripts": {
    "dev": "NODE_ENV=development next dev",
    "node": "pnpm run --filter contracts node",
    "dev-and-node": "concurrently \"pnpm dev\" \"pnpm node\" --names \"Next,Node\" --kill-others",
    "build": "NODE_ENV=production next build",
    "start": "NODE_ENV=production next start",
    "type-check": "tsc --pretty --noEmit",
    "lint": "prettier . --check && pnpm eslint",
    "lint:fix": "prettier . --write && pnpm eslint --fix",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@azns/resolver-core": "^1.6.0",
    "@azns/resolver-react": "^1.6.0",
    "@inkathon/contracts": "workspace:*",
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-contract": "^10.9.1",
    "@polkadot/extension-dapp": "^0.46.5",
    "@polkadot/extension-inject": "^0.46.5",
    "@polkadot/keyring": "^12.5.1",
    "@polkadot/types": "^10.9.1",
    "@polkadot/util": "^12.5.1",
    "@polkadot/util-crypto": "^12.5.1",
    "@prisma/client": "^5.4.2",
    "@scio-labs/use-inkathon": "^0.0.8",
    "autoprefixer": "^10.4.16",
    "next": "^13.4.19",
    "next-seo": "^6.1.0",
    "postcss": "^8.4.31",
    "prisma": "^5.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.11.0",
    "sharp": "^0.32.5",
    "spinners-react": "^1.0.7",
    "tailwindcss": "^3.3.3",
    "use-async-effect": "^2.2.7"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/downloadjs": "^1.4.3",
    "@types/node": "^18.17.17",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.49.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.0.3",
    "prettier-plugin-twin.macro": "^1.0.14",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2"
  }
}
